.sheet-body
  border: 1px solid #ccc
  min-height: 500px

.sheet-head
  border: 1px solid #ccc
  overflow: hidden

.sheet-head > div, .sheet-cells > div
  white-space: nowrap
  width: 100%
  height: 20px
  &:last-child > div
    border-bottom: none
  
.sheet-head > div > div, .sheet-cells > div > div
  display: inline-block
  overflow: hidden
  text-align: right
  padding-right: 5px
  border-right: 1px solid #ccc
  border-bottom: 1px solid #ccc
  &:last-child
    border-right: none

